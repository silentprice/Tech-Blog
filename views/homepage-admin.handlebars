<!-- Loop over each blog post in the posts array -->
{{#each posts as |post|}}
<div class="row mb-4 blog-post">
  <div class="col-md-12">
    <h2>
      <a href="/dashboard/edit/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>Posted by {{post.user.username}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-12">
    <p>
      {{post.content}}
    </p>
  </div>
</div>
{{/each}}