<!-- Existing comments -->
{{#each comments}}
  <div class="comment">
    <p>{{content}}</p>
    <p>Posted by {{user.name}} on {{format_date createdAt}}</p>
  </div>
{{/each}}

<!-- New comment form -->
<form id="comment-form">
  <div class="form-group">
    <label for="comment-content">Add a Comment:</label>
    <textarea class="form-control" id="comment-content" rows="3"></textarea>
  </div>
  <button class="btn btn-primary" type="submit">Submit</button>
</form>

